<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_margin="5dp"
        app:cardBackgroundColor="#262626"
        app:cardElevation="5dp"
        app:cardCornerRadius="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/relative_layout_item_download"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/background_download_item"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/image_view_item_download_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder" />

            <ImageView
                android:id="@+id/image_view_item_download_play"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:adjustViewBounds="true"
                android:alpha="0.7"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:elevation="2dp"
                android:focusable="true"
                android:padding="25dp"
                android:scaleType="centerCrop"
                android:tint="@color/white"
                app:srcCompat="@drawable/ic_play" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="50dp"
                android:padding="8dp">

                <TextView
                    android:id="@+id/text_view_item_download_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Game Of Thrones - Wanter is coming "
                    android:textColor="@color/red_bg_light"
                    android:textSize="8pt"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_view_item_download_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:text="1h20min"
                    android:textColor="@color/pruple_bg_light"
                    android:textSize="5pt"
                    android:textStyle="bold" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_filter_red">

                    <ImageView
                        android:id="@+id/image_view_item_download_delete"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="12dp"
                        android:tint="@color/white_text"
                        app:srcCompat="@drawable/ic_delete" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/image_view_item_download_finder"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="13dp"
                    android:tint="@color/white_text"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_folder" />
            </LinearLayout>

            <TextView
                android:id="@+id/text_view_item_download_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:text="1520 MB"
                android:textColor="@color/pruple_bg_light"
                android:textSize="5pt"
                android:textStyle="bold" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>